<h2 class="text-center mb-4">Join Us!</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
  data: {turbo: false}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" data-controller="image-preview">
    <div class="text-center">
      <%= image_tag("profile-user.png",
          class: 'avatar-xl',
          style: "cursor:pointer;",
          data: {
            "image-preview-target": "output",
            action: "click->image-preview#uploadFile"
          }
      ) %>
      <div class="mt-2 mb-3">
        <button type="button" class="btn btn-outline-mybnb btn-sm" data-action="click->image-preview#uploadFile">
          Upload a Photo
        </button>
      </div>
    </div>

    <%= f.input :photo,
                label: false,
                required: true,
                as: :file,
                input_html: {
                  class: "d-none",
                  data: {
                    "image-preview-target": "input",
                    action: "image-preview#readURL"
                  }
                } %>
    <%=
      f.input :first_name,
              required: true,
              label: false,
              autofocus: true,
              input_html: {
                autocomplete: 'first-name',
                placeholder: 'First Name',
              }
    %>
    <%=
      f.input :last_name,
              required: true,
              label: false,
              autofocus: false,
              input_html: {
                autocomplete: 'last-name',
                placeholder: 'Last Name',
              }
    %>
    <%=
      f.input :email,
              required: true,
              label: false,
              autofocus: false,
              input_html: {
                autocomplete: 'email',
                placeholder: 'Email',
              }
    %>
    <%=
      f.input :password,
              required: true,
              label: false,
              input_html: {
                autocomplete: 'new-password',
                placeholder: 'Password'
              }
    %>
    <%=
      f.input :password_confirmation,
              required: true,
              label: false,
              input_html: {
                autocomplete: 'new-password',
                placeholder: 'Confirm Password'
              }
    %>
  </div>

  <div class="form-actions d-grid my-3">
    <%= f.button :submit, 'Sign up', class: "btn-mybnb" %>
  </div>
<% end %>

<div class="text-center fs-7 mt-5">
  <%= link_to "Already have an account? Login!", new_session_path(resource_name), class:"text-decoration-none" %>
</div>
